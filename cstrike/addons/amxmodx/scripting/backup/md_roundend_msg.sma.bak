public zp_round_ended(winteam)
{
	static i;
	for(i=0; i<get_maxplayers(); i++)
	{
		if(is_user_bot(i))
			continue;
		if(winteam==WIN_ZOMBIES)
		{
			md_playbink(i, 0, g_zombiewin, 0.5, 0.3, 1, 1, 255, 255, 255, 255, 25)
		}else{
			md_playbink(i, 0, g_humanwin, 0.5, 0.3, 1, 1, 255, 255, 255, 255, 25)
		}
	}
}
